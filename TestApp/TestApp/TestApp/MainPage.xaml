<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:TestApp"
             x:Class="TestApp.MainPage">

	<Grid RowSpacing="3">
		<Grid.RowDefinitions>
			<RowDefinition Height="*"></RowDefinition>
			<RowDefinition Height="AUTO"></RowDefinition>
			<RowDefinition Height="AUTO"></RowDefinition>
			<RowDefinition Height="*"></RowDefinition>
		</Grid.RowDefinitions>
		<Grid.ColumnDefinitions>
			<ColumnDefinition Width="20"></ColumnDefinition>
			<ColumnDefinition Width="*"></ColumnDefinition>
			<ColumnDefinition Width="20"></ColumnDefinition>
		</Grid.ColumnDefinitions>
		<Label Text="Virtual Library" FontSize="42" HorizontalTextAlignment="Center" VerticalTextAlignment="Center" Grid.Column="1"></Label>
		<Button Text="Register" BorderColor="Black" CornerRadius="10" BorderWidth="2" Grid.Row="1" Grid.Column="1"
				Clicked="Register_button"></Button>
		<Button Text="Login" BorderColor="Black" CornerRadius="10" BorderWidth="2" Grid.Row="2" Grid.Column="1"
				Clicked="Login_button"></Button>
	</Grid>

</ContentPage>
